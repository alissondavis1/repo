<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/acal?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">123</property>
      
    <property name="c3po.min_size">5</property>
    <property name="c3po.max_size">20</property>
    <property name="c3po.timeout">300</property>
    <property name="c3po.max_statements">50</property>
    <property name="c3po.idle_test_period">3000</property>
   
    <mapping class="entidades.CategoriaSocio" />
    <mapping class="entidades.Cheque"         />
    <mapping class="entidades.Conta"  />
    <mapping class="entidades.Endereco"       />
    <mapping class="entidades.Entrada"        />
    <mapping class="entidades.Funcionario"    />
    <mapping class="entidades.MotivoDespesa"  />
    <mapping class="entidades.MotivoEntrada"  />
    <mapping class="entidades.Pessoa"         />
    <mapping class="entidades.Saida"          />
    <mapping class="entidades.Socio"          />
    <mapping class="entidades.Taxa"          />
    
  </session-factory>
</hibernate-configuration>
